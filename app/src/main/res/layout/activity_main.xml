<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">

	<TextView
		android:id="@+id/solution_tv"
		android:layout_margin="16dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="0"
		android:textSize="32dp"
		android:textAlignment="textEnd"
		android:layout_above="@id/result_tv"
		/>

	<TextView
		android:id="@+id/result_tv"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@id/buttons_layout"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		android:layout_marginEnd="16dp"
		android:layout_marginBottom="16dp"
		android:text="0"
		android:textAlignment="textEnd"
		android:textSize="64dp" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingVertical="16dp"
		android:layout_alignParentBottom="true"
		android:id="@+id/buttons_layout">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<com.google.android.material.button.MaterialButton
				android:layout_width="90dp"
				android:layout_height="90dp"
				app:cornerRadius="45dp"
				android:textSize="32dp"
				style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
				android:textColor="#FF0000"
				android:backgroundTint="#FFE4E1"
				android:layout_margin="6dp"
				android:id="@+id/button_c"
				android:text="C"
				/>
			<com.google.android.material.button.MaterialButton
				android:layout_width="90dp"
				android:layout_height="90dp"
				app:cornerRadius="45dp"
				android:textSize="32dp"
				style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
				android:textColor="#8470FF"
				android:layout_margin="6dp"
				android:backgroundTint="#FFE4E1"
				android:id="@+id/button_open_bracket"
				android:text="("
				/>
			<com.google.android.material.button.MaterialButton
				android:layout_width="90dp"
				android:layout_height="90dp"
				app:cornerRadius="45dp"
				android:textSize="32dp"
				style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
				android:textColor="#8470FF"
				android:backgroundTint="#FFE4E1"
				android:layout_margin="6dp"
				android:id="@+id/button_close_bracket"
				android:text=")"
				/>
			<com.google.android.material.button.MaterialButton
				android:layout_width="90dp"
				android:layout_height="90dp"
				app:cornerRadius="45dp"
				android:textSize="32dp"
				style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
				android:textColor="#8470FF"
				android:backgroundTint="#FFE4E1"
				android:layout_margin="6dp"
				android:id="@+id/button_divide"
				android:text="/"
				/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<com.google.android.material.button.MaterialButton
				android:layout_width="90dp"
				android:layout_height="90dp"
				app:cornerRadius="45dp"
				android:textSize="32dp"
				style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"

				android:textColor="#CDB79E"
				android:backgroundTint="#FFE4E1"
				android:layout_margin="6dp"
				android:id="@+id/button_7"
				android:text="7"
				/>
			<com.google.android.material.button.MaterialButton
				android:layout_width="90dp"
				android:layout_height="90dp"
				app:cornerRadius="45dp"
				android:textSize="32dp"
				style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
				android:textColor="#CDB79E"
				android:layout_margin="6dp"
				android:backgroundTint="#FFE4E1"
				android:id="@+id/button_8"
				android:text="8"
				/>
			<com.google.android.material.button.MaterialButton
				android:layout_width="90dp"
				android:layout_height="90dp"
				app:cornerRadius="45dp"
				android:textSize="32dp"
				style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
				android:textColor="#CDB79E"
				android:backgroundTint="#FFE4E1"
				android:layout_margin="6dp"
				android:id="@+id/button_9"
				android:text="9"
				/>
			<com.google.android.material.button.MaterialButton
				android:layout_width="90dp"
				android:layout_height="90dp"
				app:cornerRadius="45dp"
				android:textSize="32dp"
				style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
				android:textColor="#8470FF"
				android:backgroundTint="#FFE4E1"
				android:layout_margin="6dp"
				android:id="@+id/button_multiplier"
				android:text="*"
				/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<com.google.android.material.button.MaterialButton
				android:layout_width="90dp"
				android:layout_height="90dp"
				app:cornerRadius="45dp"
				android:textSize="32dp"
				style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"

				android:textColor="#CDB79E"
				android:backgroundTint="#FFE4E1"
				android:layout_margin="6dp"
				android:id="@+id/button_4"
				android:text="4"
				/>
			<com.google.android.material.button.MaterialButton
				android:layout_width="90dp"
				android:layout_height="90dp"
				app:cornerRadius="45dp"
				android:textSize="32dp"
				style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
				android:textColor="#CDB79E"
				android:layout_margin="6dp"
				android:backgroundTint="#FFE4E1"
				android:id="@+id/button_5"
				android:text="5"
				/>
			<com.google.android.material.button.MaterialButton
				android:layout_width="90dp"
				android:layout_height="90dp"
				app:cornerRadius="45dp"
				android:textSize="32dp"
				style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
				android:textColor="#CDB79E"
				android:backgroundTint="#FFE4E1"
				android:layout_margin="6dp"
				android:id="@+id/button_6"
				android:text="6"
				/>
			<com.google.android.material.button.MaterialButton
				android:layout_width="90dp"
				android:layout_height="90dp"
				app:cornerRadius="45dp"
				android:textSize="32dp"
				style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
				android:textColor="#8470FF"
				android:backgroundTint="#FFE4E1"
				android:layout_margin="6dp"
				android:id="@+id/button_plus"
				android:text="+"
				/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<com.google.android.material.button.MaterialButton
				android:layout_width="90dp"
				android:layout_height="90dp"
				app:cornerRadius="45dp"
				android:textSize="32dp"
				style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
				android:textColor="#CDB79E"
				android:backgroundTint="#FFE4E1"
				android:layout_margin="6dp"
				android:id="@+id/button_1"
				android:text="1"
				/>
			<com.google.android.material.button.MaterialButton
				android:layout_width="90dp"
				android:layout_height="90dp"
				app:cornerRadius="45dp"
				android:textSize="32dp"
				style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
				android:textColor="#CDB79E"
				android:layout_margin="6dp"
				android:backgroundTint="#FFE4E1"
				android:id="@+id/button_2"
				android:text="2"
				/>
			<com.google.android.material.button.MaterialButton
				android:layout_width="90dp"
				android:layout_height="90dp"
				app:cornerRadius="45dp"
				android:textSize="32dp"
				style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"

				android:textColor="#CDB79E"
				android:backgroundTint="#FFE4E1"
				android:layout_margin="6dp"
				android:id="@+id/button_3"
				android:text="3"
				/>
			<com.google.android.material.button.MaterialButton
				android:layout_width="90dp"
				android:layout_height="90dp"
				app:cornerRadius="45dp"
				android:textSize="32dp"
				style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
				android:textColor="#8470FF"
				android:backgroundTint="#FFE4E1"
				android:layout_margin="6dp"
				android:id="@+id/button_minus"
				android:text="-"
				/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<com.google.android.material.button.MaterialButton
				android:layout_width="90dp"
				android:layout_height="90dp"
				app:cornerRadius="45dp"
				style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
				android:textSize="30sp"
				android:textColor="#CDB79E"
				android:backgroundTint="#FFE4E1"
				android:layout_margin="6dp"
				android:id="@+id/button_AC"
				android:text="AC"
				/>
			<com.google.android.material.button.MaterialButton
				android:layout_width="90dp"
				android:layout_height="90dp"
				app:cornerRadius="45dp"
				android:textSize="32dp"
				style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
				android:textColor="#CDB79E"
				android:layout_margin="6dp"
				android:backgroundTint="#FFE4E1"
				android:id="@+id/button_0"
				android:text="0"
				/>
			<com.google.android.material.button.MaterialButton
				android:layout_width="90dp"
				android:layout_height="90dp"
				app:cornerRadius="45dp"
				style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
				android:textSize="32dp"
				android:textColor="#CDB79E"
				android:backgroundTint="#FFE4E1"
				android:layout_margin="6dp"
				android:id="@+id/button_dot"
				android:text="."
				/>
			<com.google.android.material.button.MaterialButton
				android:layout_width="90dp"
				android:layout_height="90dp"
				app:cornerRadius="45dp"
				style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
				android:textSize="32dp"
				android:textColor="#FFFFFF"
				android:backgroundTint="#8470FF"
				android:layout_margin="6dp"
				android:id="@+id/button_equals"
				android:text="="
				/>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>
